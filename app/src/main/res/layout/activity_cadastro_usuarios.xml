<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcc.fernanda.tcc.Cadastro.CadastroUsuarios">



    <TextView
        android:id="@+id/nomeusu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Nome:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/idNomeusu"
        android:text="Senha:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idEmailUsu"
        android:layout_alignStart="@+id/idEmailUsu"
        android:layout_below="@+id/idSenhaUsu"
        android:layout_marginTop="11dp"
        android:text="Confirmar Senha:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="158dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nomeusu"
        android:layout_alignRight="@+id/nomeusu"
        android:layout_below="@+id/idConfSenhaUsu"
        android:layout_marginTop="16dp"
        android:text="Email:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomeusu"
        android:layout_alignStart="@+id/nomeusu"
        android:layout_below="@+id/idEmailUsu"
        android:layout_marginTop="12dp"
        android:text="Tipo de Usuario:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="263dp" />

    <EditText
        android:id="@+id/idEmailUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idNomeusu"
        android:layout_alignStart="@+id/idNomeusu"
        android:layout_centerVertical="true"
        android:ems="@integer/campo"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/idNomeusu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/nomeusu"
        android:ems="@integer/campo"
        android:inputType="textPersonName"

        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="34dp" />

    <EditText
        android:id="@+id/idSenhaUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:ems="@integer/campo"
        android:inputType="textPassword"

        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/idConfSenhaUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:ems="@integer/campo"
        android:inputType="textPassword"

        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="138dp" />

    <Button
        android:id="@+id/btn_voltar_CU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text="@string/Voltar" />

    <Button
        android:id="@+id/btn_cad_CU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_voltar_CU"
        android:layout_alignBottom="@+id/btn_voltar_CU"
        android:layout_toEndOf="@+id/idEmailUsu"
        android:layout_toRightOf="@+id/idEmailUsu"
        android:text="@string/Cadastrar" />

    <Spinner
        android:id="@+id/idSpinnesUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="24dp" />
</RelativeLayout>
